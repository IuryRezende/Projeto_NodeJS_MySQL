<main>
    <div class="container">
        <div class="row">
            <h2>Register</h2>
            <div>
                <form action="/register" method="post">
                    <input 
                    type="text" name="user_r" class="form-control" placeholder="user"
                    onkeypress="return event.charCode !== 32"
                    oninput="this.value = this.value.replace(/\s/g, '')" required>
                    <input type="text" name="password_r" class="form-control" placeholder="password" required>
                    <a href="/" class="btn btn-primary">Return</a>
                    <button type="submit" class="btn btn-secondary">Create</button>
                </form>
            </div>
        </div>
    </div>
</main>